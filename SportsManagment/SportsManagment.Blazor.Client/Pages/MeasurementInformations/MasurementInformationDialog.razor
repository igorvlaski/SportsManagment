<MudDialog>
    <DialogContent>
        <MudForm>
            <MudTextField Label="Ime meritve" @bind-Value="measurementInformation.Name" FullWidth />
             <MudDatePicker Label="Datum meritve" Editable="true" @bind-Date="measurementInformation.Date" DateFormat="dd.MM.yyyy" />
             <MudTextField Label="Opis meritve" @bind-Value="measurementInformation.Description" FullWidth />
             <MudTextField Label="Lokacija meritve" @bind-Value="measurementInformation.Location" FullWidth />
         </MudForm>
     </DialogContent>
     <DialogActions>
         <MudButton OnClick="@OnSubmit" Color="Color.Primary">@(existingMeasurementInformation == null ? "Potrdi" : "Dodaj")</MudButton>
         <MudButton OnClick="@Cancel" Color="Color.Error">Prekliči</MudButton>
     </DialogActions>
 </MudDialog>