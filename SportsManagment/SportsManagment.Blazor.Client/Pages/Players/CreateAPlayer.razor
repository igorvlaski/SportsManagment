@page "/create-player"
@inject HttpClient Http
@inject NavigationManager Navigation

<MudPaper Elevation="1" Class="pa-4 mx-auto" Style="max-width: 500px">
    <MudText Typo="Typo.h5">Create a Player</MudText>

    <EditForm Model="player" OnSubmit="HandleValidSubmit">
        <MudTextField Label="First Name" @bind-Value="player.FirstName" For="@(() => player.FirstName)" />
        <MudTextField Label="Last Name" @bind-Value="player.LastName" For="@(() => player.LastName)" />
        <MudTextField Label="Email" @bind-Value="player.Email" For="@(() => player.Email)" />
        <MudTextField Label="Address" @bind-Value="player.Address" For="@(() => player.Address)" />
        <MudTextField Label="Phone Number" @bind-Value="player.PhoneNumber" For="@(() => player.PhoneNumber)" />
        <MudTextField Label="Parent Name" @bind-Value="player.ParentName" For="@(() => player.ParentName)" />
        <MudTextField Label="Parent Phone Number" @bind-Value="player.ParentPhoneNumber" For="@(() => player.ParentPhoneNumber)" />
        <MudDatePicker Label="Date of Birth" Editable="true" @bind-Date="tempBirthDate" DateFormat="dd.MM.yyyy" />
        <br>

    <MudGrid Justify="Justify.Center">
    <MudItem>
                <MudButton ButtonType= "ButtonType.Submit" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary">Create Player</MudButton>
        <MudButton Type = "Reset" Variant="Variant.Filled" DisableElevation="true" @onclick="ResetForm" >Reset Form</MudButton>
    </MudItem>
    </MudGrid>
    </EditForm>
</MudPaper>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <MudAlert Severity="Severity.Error" Dense="true">@errorMessage</MudAlert>
}


