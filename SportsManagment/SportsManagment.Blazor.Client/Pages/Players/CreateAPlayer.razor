@page "/create-player"

<MudPaper Elevation="1" Class="pa-4 mx-auto" Style="max-width: 500px">
    <MudText Typo="Typo.h5">Create a Player</MudText>

    <EditForm Model="player" OnSubmit="HandleValidSubmit">
        <MudTextField Label="Ime" @bind-Value="player.FirstName" For="@(() => player.FirstName)" />
        <MudTextField Label="Priimek" @bind-Value="player.LastName" For="@(() => player.LastName)" />
        <MudDatePicker Label="Datum rojstva" Editable="true" @bind-Date="tempBirthDate" DateFormat="dd.MM.yyyy" />
        <MudTextField Label="Email" @bind-Value="player.Email" For="@(() => player.Email)" />
        <MudTextField Label="Naslov" @bind-Value="player.Address" For="@(() => player.Address)" />
        <MudTextField Label="Telefonska številka" @bind-Value="player.PhoneNumber" For="@(() => player.PhoneNumber)" />
        <MudTextField Label="Ime starša" @bind-Value="player.ParentName" For="@(() => player.ParentName)" />
        <MudTextField Label="Telefonska številka starša" @bind-Value="player.ParentPhoneNumber" For="@(() => player.ParentPhoneNumber)" />
        <br>

        <MudGrid Justify="Justify.Center">
            <MudItem>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" DisableElevation="true" Color="Color.Primary">Ustvari igralca</MudButton>
                <MudButton Variant="Variant.Filled" DisableElevation="true" @onclick="ResetForm">Resetiraj obrazec</MudButton>
            </MudItem>
        </MudGrid>
    </EditForm>
</MudPaper>
<br>
<br>
<MudGrid Justify="Justify.Center">
    <MudButton Href="/players" Variant="Variant.Filled" Color="Color.Primary">Nazaj na vse igralce</MudButton>
</MudGrid>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <MudAlert Severity="Severity.Error" Dense="true">@errorMessage</MudAlert>
}


