@page "/player/{PlayerId:guid}"

<PageTitle>Player Details</PageTitle>

@if (player != null)
{
    <MudPaper Elevation="25">
    <MudToolBar>
        <MudTooltip Text="Uredi Igralca" Arrow="true" Placement="Placement.Top">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Href=@($"/player/update/{player.Id}")></MudIconButton>
        </MudTooltip>
        <MudTooltip Text="Izbriši igralca" Arrow="true" Placement="Placement.Top">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete"
                           OnClick="@(() => OpenDeleteConfirmationDialog(player.Id))"></MudIconButton>
        </MudTooltip>
    </MudToolBar>
    </MudPaper>
    <MudPaper Class="pa-4 ma-2" Style="max-width: 400px; width: 100%;">
        <MudList>
            <MudListItem>
                <MudText Typo="Typo.h6">@player.FirstName @player.LastName</MudText>
            </MudListItem>
            <MudListItem>
                <MudText Typo="Typo.subtitle1">Datum rojstva:</MudText>
                <MudText Typo="Typo.body1">@player.DateOfBirth.ToString("d")</MudText>
            </MudListItem>
            <MudListItem>
                <MudText Typo="Typo.subtitle1">Email:</MudText>
                <MudText Typo="Typo.body1">@player.Email</MudText>
            </MudListItem>
            <MudListItem>
                <MudText Typo="Typo.subtitle1">Telefonska številka:</MudText>
                <MudText Typo="Typo.body1">@player.PhoneNumber</MudText>
            </MudListItem>
            <MudListItem>
                <MudText Typo="Typo.subtitle1">Naslov:</MudText>
                <MudText Typo="Typo.body1">@player.Address</MudText>
            </MudListItem>
            <MudListItem>
                <MudText Typo="Typo.subtitle1">Ime Starša:</MudText>
                <MudText Typo="Typo.body1">@player.ParentName</MudText>
            </MudListItem>
            <MudListItem>
                <MudText Typo="Typo.subtitle1">Telefonska številka starša:</MudText>
                <MudText Typo="Typo.body1">@player.ParentPhoneNumber</MudText>
            </MudListItem>
        </MudList>
    </MudPaper>


}
else
{
    <MudText Typo="Typo.body1">Loading player details...</MudText>
}

